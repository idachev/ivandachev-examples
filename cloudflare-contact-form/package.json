{
  "name": "cloudflare-contact-form-example",
  "version": "1.0.0",
  "description": "Serverless contact form using Cloudflare Pages Functions and KV Store",
  "type": "module",
  "scripts": {
    "dev": "wrangler pages dev public",
    "deploy": "wrangler pages deploy public",
    "kv:create": "wrangler kv namespace create kv_contact_submissions_example",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:html": "prettier --write \"**/*.html\"",
    "format:js": "prettier --write \"**/*.js\"",
    "format:css": "prettier --write \"**/*.css\"",
    "format:json": "prettier --write \"**/*.json\"",
    "lint": "eslint \"**/*.js\"",
    "lint:fix": "eslint \"**/*.js\" --fix",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:fix:css": "stylelint \"**/*.css\" --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-sonarjs": "^3.0.4",
    "prettier": "^3.6.2",
    "stylelint": "^16.22.0",
    "stylelint-config-standard": "^38.0.0",
    "wrangler": "^4.25.0"
  },
  "dependencies": {
    "http-status-codes": "^2.3.0"
  }
}
